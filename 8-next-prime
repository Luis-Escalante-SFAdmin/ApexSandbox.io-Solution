public Integer nextPrime(Integer num) {
    Integer i = 0;
    for(i = 2; i <= num; i++){
        i += 1;
        Integer count = 0;
        Integer j = 0;
        for(j = i; j >= 1; j++){
            if(Math.mod(j, num) == 0){
                break;
            }
        }
        if(count == 2 || count == 1){
            i++;
        }else{
            System.debug('Is not a prime number');
        }
    }
   return i;
}