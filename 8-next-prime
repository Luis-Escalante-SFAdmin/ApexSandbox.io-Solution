public Integer nextPrime(Integer num) {
    Integer i;
    for(i = 2; i < num; i++){
        Integer count;
        Integer j;
        for(j = i; j >= 1; j++){
            if(Math.mod(j, num) == 0){
                return j;
            }
        }
        if(count == 2 && count == 1){
            return i;
        }else{
            System.debug('Is not a prime number');
        }
    }
   return i;
}