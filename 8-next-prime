public Integer nextPrime(Integer num) {
    List<Integer> pNum = new List<Integer>();

    for(i = 2; i < pNum-1; i++){
        Integer count = 0;
        Integer j = 0;
        for(j = i; j >= 1; j--){
            if(Math.mod(i, j) == 0){
                count++;
            }
        }
        if(count == 2 || count == 1){
            return i;
        }else{
            System.debug('Is not a prime number');
        }
    }
    return i;
}