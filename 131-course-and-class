public void createCourseAndClass(String name, String description) {

    apxio__Course__c courses = new apxio__Course__c(Name= name, apxio__Course_Details__c= description);
    insert courses;

    apxio__Class__c classes = new apxio__Class__c(Name= name, apxio__Description__c = courses.apxio__Description__c != null ? courses.apxio__Description__c.left(255) : null, apxio__Course__c = courses.Id);
    insert classes;
    

}