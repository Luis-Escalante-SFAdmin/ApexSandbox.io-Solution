public void createCourseAndClass(String name, String description) {

    apxio__Course__c courses = new apxio__Course__c(Name= name);
    courses.apxio__Course_Details__c= null;
    insert courses;
  

    apxio__Class__c classes = new apxio__Class__c(Name= name, apxio__Description__c = description.left(255));
    classes.apxio__Course__c = courses.Id;
    insert classes;
    
    try
    {
        insert classes;
    }
    catch (DmlException e)
    {
        System.debug(e.getMessage());
    }

}