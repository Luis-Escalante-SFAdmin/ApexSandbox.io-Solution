public List<Account> checkAccounts(List<Account> accounts)
{
    List<Account> acc = new List<Account>();
    String Name;
    acc.add(new Account());

    try
    {
        String BillingCity = null;
        if(BillingCity == null) throw new AccountException('Invalid BillingCity');
        if(acc == null) throw new IllegalArgumentException('accounts should not be null');

    }
    catch(IllegalArgumentException e)
    {
        throw new IllegalArgumentException('accounts should not be null');
    }

    return acc;

} 

//do not remove the following custom-defined exception
public class AccountException extends Exception {}