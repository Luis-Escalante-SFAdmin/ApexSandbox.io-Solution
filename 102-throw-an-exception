public List<Account> checkAccounts(List<Account> accounts)
{

    
    try
    {   
        Account acc = new Account(String billing = BillingCity, string name = Name);

        if(acc != null) return acc;

        if(acc.billing == null) throw new IllegalArgumentException('accounts should not be null');
        
        if(acc.billing == null) throw new AccountException('Invalid BillingCity');
        

    }
    catch(Exception e)
    {
        return e.getMessage();
    } 
}

//do not remove the following custom-defined exception
public class AccountException extends Exception {}