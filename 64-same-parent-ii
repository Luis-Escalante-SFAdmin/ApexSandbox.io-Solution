public Boolean sameParent(Account acc, Contact con, Opportunity opp) {
    if((con.AccountId == null) && (opp.AccountId == null)) return false;

    if((con.AccountId == opp.AccountId))
    {
        return true;
    }
    else if((con.AccountId != acc.Id) && (opp.AccountId != acc.Id))
    {
        return false;
    }
    return true;
}