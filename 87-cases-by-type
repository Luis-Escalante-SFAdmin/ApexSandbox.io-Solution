public Map<String, List<Case>> casesByType(List<Case> cases) {
    Map<String, List<Case>> result = new Map<String, List<Case>>();
    

    for(Case c : [SELECT Type FROM Case WHERE Type != null]) {
        if(result.containsKey(c.Type)) {
            Case[] myCase = result.get(c.Type);
            myCase.add(Type);
            result.put(c.Type, myCase);
        } else {
            result.put(c.Type, new List<Case> {myCase});
        }
    }
    return result;
}