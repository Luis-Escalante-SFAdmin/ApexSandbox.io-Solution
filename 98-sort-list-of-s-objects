public List<Account> getAccounts(List<Account> accounts) {

List<Account> accountList = [SELECT Name, AnnualRevenue FROM Account ORDER BY AnnualRevenue DESC];
        
        List<AccountWrapper> accWrapperList = new List<AccountWrapper>();
        
        for (Account a : accountList) {
            accWrapperList.add(new AccountWrapper(a));
        }
        
        accWrapperList.sort();
        
        return accounts;
    }
    
    public class AccountWrapper implements Comparable {
        public Account acc { get; set; }
        public String name { get; set; }
        public Decimal annRev { get; set; }
        
        public AccountWrapper(Account act) {
            acc = act;
            name = act.Name;
            annRev = act.AnnualRevenue;
        }
        
        public Integer compareTo(Object compareTo) {
            AccountWrapper otherAcc = (AccountWrapper)compareTo;
            
            if (this.annRev == otherAcc.annRev) {
                return 0;
            } else if (this.annRev < otherAcc.annRev) {
                return -1;
            } else {
                return 1;
            }
        }

}