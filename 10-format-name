public String formatName(String firstName, String lastName) {
    if(String.isBlank(firstName) != null && String.isBlank(lastName != null)){
        return lastName + ',' + ' ' + firstName;
    }else if (String.isBlank(firstName) == null && String.isBlank(lastName) != null){
        return fullName = lastName;
    }else if (String.isBlank(firstName) != null && String.isBlank(lastName) == null){
        return fullName = firstName;
    }else{
        return fullName = '';
    }
}