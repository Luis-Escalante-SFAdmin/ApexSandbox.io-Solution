public String ageGroup(Integer n) {
    if(n < 1){
        return 'Infant';
    } else if(n > 3 && n < 15) {
        return 'Child';
    } else if(n > 16 && n < 22){
        return 'Youth';
    } else if (n > 22){
        return 'Adult';
    } else {
        System.debug('You have not been borned or you are too old');
    }
}