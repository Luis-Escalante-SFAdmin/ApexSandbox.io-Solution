public List<String> getFieldsValue(Account acc, List<String> fields)
{

    List<String> results = new List<String>();

    for(String field : fields)
    {
        String values = String.valueOf(fields);

        if(values != null)
        {
            values = (String)acc.get(field);
            results.add(values);
        }
        else if(values != 0)
        {
            result.add(values);
        }
    }

    return results;

}