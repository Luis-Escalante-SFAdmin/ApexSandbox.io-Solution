public void validateInsert(List<Opportunity> opportunities){

    List<Opportunity> opp = new List<Opportunity>(StageName = '', Description = '');


    for(Opportunity o : opp)
    {
        if(Description != null && StageName == 'Closed Won')
        {
            insert o;
        }
        else if(Description == null && StageName == 'Closed Won')
        {
            o.addError('Description should not be empty for Closed Won opportunity.');
        }
    }
    insert opp;
}